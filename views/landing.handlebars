<head>
    <link rel="stylesheet" href="../public/login_signup.css">
</head>
<div class="landing_heading">
   
</div>
<form action="/login" method="post">
    <div class="container">
         <h2 id="login-header"> Login into an exsisting account !</h2>
        <label for="uname"><b>Username</b></label>
        <input type="text" placeholder="Enter Username" name="uname" id="uname" required="">
        <label for="psw"><b>Password</b></label>
        <input type="password" placeholder="Enter Password" name="psw" id="psw" required="">
        <button type="submit">LOGIN</button>
        
    </div>
</form> 
    <div class="container">
        <h2 id="signup-header"> Create a new account ! </h2>
        <form action="/quiz" method="GET">
            <button type="submit">SIGN UP</button>
        </form>
    </div>
    
    <div id="displayMessage">
        {{#if "displayMessage == 'question'"}}
            <p>{{questionMessage}}</p>
        {{/if}}
        {{#if "displayMessage == 'signup'"}}
            <p>{{signupMessage}}</p>
        {{/if}}
        {{#if "displayMessage == 'login'"}}
            <p>{{loginMessage}}</p>
        {{/if}}
        {{#if "displayMessage == 'logout'"}}
            <p>{{logoutMessage}}</p>
        {{/if}}
        {{#if "displayMessage == 'editUser'"}}
            <p>{{edituserMessage}}</p>
        {{/if}}

    </div>
   

